---
import Navigation from './Navigation.astro';
interface Props {
  class?: string;
}
const { class: className, ...props } = Astro.props;
---
<header class={`header${className ? ` ${className}` : ''}`} {...props}>
  <Navigation  />
</header>

<style is:global>
  .header {
    position: sticky;
		inset-block-start: 0;
    container-type: scroll-state;
		z-index: var(--layer-2);
    view-transition-name: site-nav;
  }
</style>