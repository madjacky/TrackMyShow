---
import { Picture } from 'astro:assets';
import BackIcon from '../../assets/images/svg/back.svg';
import Layout from '../../layouts/Layout.astro';
import { tvShows } from '../../data/tvshows';

export async function getStaticPaths() {
  return tvShows.map(show => ({
    params: { id: show.title },
    props: { show },
  }));
}
const { show } = Astro.props;
---
<section>
  <header>
    <Picture src={show.cover} formats={['avif', 'webp']} alt={`Poster for ${show.title}`} loading={'lazy'} />
  </header>
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    {show.cast.map(actor => (
      <div class="bg-white rounded-lg shadow-md overflow-hidden p-4">
        <div class="flex flex-col items-center text-center">
          <Picture src={actor.avatar}  formats={['avif', 'webp']} alt={`Poster for ${actor.name}`} loading={'lazy'} />
          <h3 class="font-bold">{actor.name}</h3>
          <p class="text-gray-600">{actor.role}</p>
        </div>
      </div>
    ))}
  </div>
</section>